<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/aircraft_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp" />

    <TextView
        android:id="@+id/aircraft_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/aircraft_total"
        android:padding="2dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/aircraft_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/aircraft_total">

        <ListView
            android:id="@+id/aircraft_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
